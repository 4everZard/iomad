<div id="iomad_learningpaths">
    {{^ ispaths }}
        <div class="alert alert-warning">
            {{# str }}nopaths, block_iomad_learningpath{{/ str }}
        </div>
    {{/ ispaths }}
    {{# ispaths }}
        {{# paths }}
            <div class="card">
                <div class="row">
                    <div class="col-md-4 my-auto">
                        <img class="img-responsive my-auto" src="{{{ imageurl }}}" />
                    </div>
                    <div class="col-md-8 px-3">
                        <div class="card-block px-3">
                            <h4 class="card-title">{{ name }}</h4>
                            <p class="card-text">{{{ description }}}</p>
                        </div>
                    </div>
                </div>
            </div>
        {{/ paths }}
    {{/ ispaths }}
</div>
